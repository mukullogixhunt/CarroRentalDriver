<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_12sdp"
    android:backgroundTint="@color/primary_field">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Review"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <!-- Rating -->
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvRatingValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/5"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <!-- Remarks -->
        <EditText
            android:id="@+id/etRemarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Remarks (optional)"
            android:minLines="3"
            android:background="@drawable/otp_active_box"
            android:padding="@dimen/_10sdp"/>

        <!-- Want again -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you want this driver again?"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbYes"
                android:text="Yes"/>

            <RadioButton
                android:id="@+id/rbNo"
                android:text="No"/>
        </RadioGroup>

        <!-- Date Time -->
        <LinearLayout
            android:id="@+id/layoutDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvSelectDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Date"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/otp_active_box"/>

            <TextView
                android:id="@+id/tvSelectTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Time"
                android:padding="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/otp_active_box"/>
        </LinearLayout>

        <!-- Buttons -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skip Now"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/otp_active_box"
            android:textColor="@color/primary"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Review"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/custom_tab_indicator"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
